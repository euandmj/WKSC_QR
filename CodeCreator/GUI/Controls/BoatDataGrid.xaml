<DataGrid x:Class="GUI.Controls.BoatDataGrid"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:local="clr-namespace:GUI.Controls"
          mc:Ignorable="d"
          IsReadOnly="True"
          ItemsSource="{Binding DataSource}"
          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
          SelectionMode="Extended"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="True"
          AutoGenerateColumns="False">

    <DataGrid.Columns>
        <DataGridTextColumn Header="Owner"
                            Binding="{Binding Owner}" />
        <DataGridTextColumn Header="Row"
                            Binding="{Binding Zone}" />
        <DataGridTextColumn Header="Sail Number"
                            Binding="{Binding SailNumber}" />
        <DataGridTextColumn Header="Class"
                            Binding="{Binding BoatClass}"
                            Width="*" />
    </DataGrid.Columns>

</DataGrid>
