<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:GUI.Converters"
             x:Class="GUI.Views.ItemDetailPage"
             xmlns:vm="clr-namespace:GUI.ViewModels"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <converters:PaidColorConverter x:Key="PaidColorConverter" />
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:ItemDetailViewModel />
    </ContentPage.BindingContext>

    <StackLayout Spacing="20"
                 Padding="15">
        <Label Text="Owner" 
               FontAttributes="Bold"
               FontSize="20" />
        <Label Text="{Binding Item.Owner}"
               FontSize="25"/>

        <Label Text="Boat"
               FontAttributes="Bold"
               FontSize="20" />
        <Label Text="{Binding Item.BoatClass}"
               FontSize="25"/>

        <Label Text="Zone"
               FontAttributes="Bold"
               FontSize="20" />
        <Label Text="{Binding Item.Zone}"
               FontSize="25" />



        <Label Text="DueDate"
               FontAttributes="Bold"
               FontSize="20" />
        <Label Text="{Binding Item.DueDate}"
               BackgroundColor="{Binding Item.HasPaid, Converter={StaticResource PaidColorConverter}}"
               FontSize="25"/>
    </StackLayout>
    
</ContentPage>